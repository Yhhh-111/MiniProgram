/** wxss **/
/*自定义按钮样式*/
.ocr-wrapper {
  margin: 40rpx auto !important;
  width: 375rpx !important;
}
.intro {
  margin: 40rpx !important;
}

.idcard-wrap {
  display: flex;
  justify-content: space-around;
  margin-top: 1.2rem;
  padding: 0 0.4rem;
}

.idcard {
  width: 46%;
  height: 8rem;
}

.info-wrap {
  margin-top: 1.2rem;
}

.info-wrap .van-field__label {
  width: 12rem;
}

.info-wrap .van-field__body {
  width: 5rem;
  float: right;
}

.info-wrap .msg-code .van-field__body {
  width: 8rem;
}

.info-wrap .numcode .van-field__body {
  width: 8rem;
}

.info-wrap .numcode .numcode-img {
  display: inline-block;
  width: 4.8rem;
  height: 1.8rem;
}

.info-wrap .numcode .van-field__icon-container {
  display: flex;
  align-items: center;
}

.btn-wrap {
  margin: 1.2rem 0;
  margin-bottom: 1rem;
}